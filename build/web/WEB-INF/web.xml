<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginService</servlet-name>
        <servlet-class>services.LoginService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginService</servlet-name>
        <url-pattern>/LoginService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterService</servlet-name>
        <servlet-class>services.RegisterService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterService</servlet-name>
        <url-pattern>/RegisterService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateGameService</servlet-name>
        <servlet-class>services.UpdateGameService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateGameService</servlet-name>
        <url-pattern>/UpdateGameService</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterGame</servlet-name>
        <servlet-class>services.RegisterGame</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterGame</servlet-name>
        <url-pattern>/RegisterGame</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EnterGame</servlet-name>
        <servlet-class>services.EnterGame</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EnterGame</servlet-name>
        <url-pattern>/EnterGame</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>home</servlet-name>
        <jsp-file>/pages/home.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/pages/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/pages/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>tournaments</servlet-name>
        <jsp-file>/pages/tournaments.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>tournaments</servlet-name>
        <url-pattern>/tournaments</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/pages/login.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            180
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/pages/errors/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/pages/errors/UnknownError.html</location>
    </error-page>
</web-app>
